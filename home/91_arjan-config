## Navigate // Relative Window // <ï…º> j k l ; ##
set_from_resource $i3-wm.binding.left i3-wm.binding.left j
set_from_resource $i3-wm.binding.right i3-wm.binding.right semicolon
set_from_resource $i3-wm.binding.up i3-wm.binding.up k
set_from_resource $i3-wm.binding.down i3-wm.binding.down l
bindsym $mod+$i3-wm.binding.left focus left
bindsym $mod+$i3-wm.binding.down focus down
bindsym $mod+$i3-wm.binding.up focus up
bindsym $mod+$i3-wm.binding.right focus right

# Output workspaces to screens
workspace "1: Terminal" output primary
workspace "8: Chrome" output HDMI-0
workspace "10: Code" output primary

# Assignments for workspaces
assign [class="Google-chrome"] "8: Chrome"
assign [class="Code"] "10: Code"

# Sequence of commands upon login
exec --no-startup-id i3-msg 'workspace "1: Terminal"; exec gnome-terminal'
exec --no-startup-id google-chrome
